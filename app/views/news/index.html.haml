=render('layouts/header')
.row
  - @news.each do |news|
    .large-4.columns
      %ul.pricing-table
        %li
          %img{ :src => "#{news.featured_image.url(:medium)}", :style => "width: 100%;"} 
        %li.title= news.title
        %li.description= news.content
        -if news.content.nil?
        -else
          %li.bullet-item= news.content
        %li.cta-button
          %a.button.small{ :href => "#{news_path(news)}"} Más Información
