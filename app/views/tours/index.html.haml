=render('layouts/header')
.row
  - @tours.each do |tour|
    .large-4.columns
      %ul.pricing-table
        %li
          %img{ :src => "#{tour.image.url(:medium)}", :style => "width: 100%;"} 
        %li.title= tour.name
        %li.price #{tour.price} #{tour.currency}
        %li.description= tour.description
        -if tour.conditions.nil?
        -else
          %li.bullet-item= tour.conditions
        %li.cta-button
          %a.button.small{ :href => "#{tour_path(tour)}"} Más Información