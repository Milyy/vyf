

=render('layouts/header')
=render('slider')
.row{ :style => "margin-top: 25px; "}
  .large-4.columns{role: "main"}
    #news
      %h3 
        =link_to "Noticias"
    -@news.each do |noticia|
      .panel
        =image_tag(noticia.featured_image)
        %hr
        %h4{:style => "text-align: center;"}= noticia.title
        %p= noticia.content
        %hr/
        %a.button.expand.small{ :href => news_path(noticia)} Ver mÃ¡s...
      %hr/
  .large-8.columns{role: "main"}
    #prom
      %h3 
        =link_to "Tours"
    -@offers.each do |offer|
      .large-6.columns
        %ul.pricing-table
          %li
            %img{ :src => "#{offer.image.url(:medium)}", :style => "width: 100%;"} 
          %li.title= offer.name
          %li.price #{offer.price} #{offer.currency}
          %li.description= offer.description
          -if offer.conditions.nil?
          -else
            %li.bullet-item= offer.conditions
          %li.cta-button
            %a.button.small RSVP